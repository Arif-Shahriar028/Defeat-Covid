<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:layout_margin="10dp"
    tools:context=".InfoPage1">

    <EditText
        android:id="@+id/yourNameId"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Your name"
        android:textSize="20sp"
        android:backgroundTint="#E6D758"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/fathersNameId"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Father's name"
        android:textSize="20sp"
        android:backgroundTint="#E6D758"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/mothersNameId"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Mother's name"
        android:textSize="20sp"
        android:backgroundTint="#E6D758"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/nationalityId"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Nationality"
        android:textSize="20sp"
        android:backgroundTint="#E6D758"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/genderId"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Gender"
        android:textSize="20sp"
        android:backgroundTint="#E6D758"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/nextButtonId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:text="Next"
        android:textSize="20sp"
        android:textStyle="bold"
        />


</LinearLayout>